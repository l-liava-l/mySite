@media only screen and (min-device-width: 1280px)
  .b-tittle__h1
    font-size 700%

  .b-tittle__loader-span
    font-size 600%

@media only screen and (max-device-width: 1080px)
  .b-tittle__loader-span
    font-size 400%

  .portret-hidden
    display none

  .b-tittle__list
    margin-left 30px

.b-tittle__list__item
  color: #333
  font-weight: bold
  text-decoration: none
  float: left
  cursor: pointer
  margin-top: 40px

.b-tittle__list__item:hover
  text-decoration: none

.b-tittle__description
  color #666666
  font-size 20px

.b-tittle__list__item__github
  max-width 50px
  max-height 50px
  border-radius 10px

.b-tittle__list__item__brainstorage
  max-height 50px
  border-radius 10px
